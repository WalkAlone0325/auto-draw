{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^Base(.*)": "@/components/Base$1.vue"
    }
  },
  "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "自动数据采集系统",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/index/form",
      "style": {
        "navigationBarTitleText": "项目信息"
      }
    },
    {
      "path": "pages/collect/index",
      "style": {
        "navigationBarTitleText": "采集"
      }
    },
    {
      "path": "pages/collect/map",
      "style": {
        "navigationBarTitleText": "数据采集",
        "disableScroll": false
      }
    },
    {
      "path": "pages/collect/stage-form",
      "style": {
        "navigationBarTitleText": "编辑段落"
      }
    },
    {
      "path": "pages/collect/multi-stage-form",
      "style": {
        "navigationBarTitleText": "创建批量段落"
      }
    },
    {
      "path": "pages/collect/section-select",
      "style": {
        "navigationBarTitleText": "选择段落"
      }
    },
    {
      "path": "pages/collect/node-form",
      "style": {
        "navigationBarTitleText": "编辑节点"
      }
    },
    {
      "path": "pages/collect/form",
      "style": {
        "navigationBarTitleText": "开始采集"
      }
    },
    {
      "path": "pages/collect/select-map",
      "style": {
        "enablePullDownRefresh": false,
        "navigationBarTitleText": "坐标确认"
      }
    },
    {
      "path": "pages/collect/select-node",
      "style": {
        "enablePullDownRefresh": false,
        "navigationBarTitleText": "选择节点"
      }
    },
    {
      "path": "pages/mine/index",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/mine/info",
      "style": {
        "navigationBarTitleText": "个人信息"
      }
    },
    {
      "path": "pages/login/index",
      "style": {
        "navigationBarTitleText": "登录",
        "navigationStyle": "custom",
        "disableScroll": true
      }
    },
    {
      "path": "pages/mine/agreement",
      "style": {
        "navigationBarTitleText": "协议"
      }
    }
  ],
  "tabBar": {
    "color": "#333333",
    "borderStyle": "black",
    "selectedColor": "#333333",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/index/index",
        "text": "项目",
        "iconPath": "static/tab/project.png",
        "selectedIconPath": "static/tab/project-a.png"
      },
      {
        "pagePath": "pages/collect/index",
        "text": "采集",
        "iconPath": "static/tab/collect.png",
        "selectedIconPath": "static/tab/collect-a.png"
      },
      {
        "pagePath": "pages/mine/index",
        "text": "我的",
        "iconPath": "static/tab/mine.png",
        "selectedIconPath": "static/tab/mine-a.png"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "navigationBarBackgroundColor": "#F8F8F8",
    "backgroundColor": "#F8F8F8"
  },
  "uniIdRouter": {}
}
